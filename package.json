{
	"name": "@homebridge-nhc2/nhc2-hobby-api",
	"version": "2.0.1",
	"description": "A wrapper library for the Niko Home Control 2 Hobby API",
	"main": "lib/NHC2.js",
	"scripts": {
		"test": "jest --config jest.config.js --detectOpenHandles --forceExit --collectCoverage && cat ./coverage/lcov.info | coveralls --verbose",
		"test:single-run": "jest --config jest.config.js --detectOpenHandles --forceExit",
		"test:watch": "jest --config jest.config.js --watchAll",
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"lint": "tslint -p tsconfig.json --fix",
		"prepare": "npm run build",
		"preversion": "npm run lint",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags",
		"check-for-updates": "npx npm-check-updates -u"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/homebridge-nhc2/nhc2-hobby-api.git"
	},
	"keywords": [
		"Niko Home Control"
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/homebridge-nhc2/nhc2-hobby-api/issues"
	},
	"homepage": "https://github.com/homebridge-nhc2/nhc2-hobby-api#readme",
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@babel/preset-env": "^7.12.11",
		"@babel/preset-typescript": "^7.12.7",
		"@types/jest": "^26.0.19",
		"@types/mosca": "^2.8.3",
		"@types/node": "^14.14.14",
		"babel-jest": "^26.6.3",
		"codecov": "^3.8.1",
		"coveralls": "^3.1.0",
		"jest": "^26.6.3",
		"mosca": "^2.8.3",
		"prettier": "^2.2.1",
		"ts-jest": "^26.4.4",
		"tslint": "^5.20.1",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^4.1.3"
	},
	"files": [
		"lib/**/*"
	],
	"dependencies": {
		"mqtt": "^4.2.6",
		"rxjs": "^6.6.3"
	}
}
